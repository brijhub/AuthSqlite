<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.brijesh.authsqlite.DashboardActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome brijesh,"
        android:textSize="25sp"
        android:layout_margin="5dp"
        android:id="@+id/name_of_user"
        android:layout_gravity="center"
        android:padding="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your number 9773666844"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:id="@+id/contact_of_user"
        android:gravity="center"
        android:layout_below="@+id/name_of_user"
        android:padding="5dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="18sp"
        android:layout_margin="5dp"
        android:id="@+id/proceed_to_logout"
        android:layout_below="@+id/contact_of_user"
        />
</RelativeLayout>
